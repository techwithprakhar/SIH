<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batches</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>Batches</h2>
    <form method="POST" action="/batches">
        <input type="text" name="name" placeholder="Batch Name" required>
        <input type="text" name="department" placeholder="Department">
        <input type="number" name="semester" id="batchSemester" placeholder="Semester" required onchange="filterSubjectsBySemester()">
        <input type="number" name="studentsCount" placeholder="Students Count">
        <input type="text" name="shift" placeholder="Shift">
        <br>
        <label for="classroom">Assign Classroom:</label>
        <select name="classroom" id="classroom">
            <option value="">--Select Classroom--</option>
            <% classrooms.forEach(function(room) { %>
                <option value="<%= room._id %>"><%= room.name %> (<%= room.department %>, <%= room.shift %>)</option>
            <% }); %>
        </select>
        <br>
        <div id="subject-teacher-list">
            <label>Assign Subjects and Teachers for Selected Semester:</label>
            <% subjects.forEach(function(subject, idx) { %>
                <div class="subject-row" data-semester="<%= subject.semester %>" style="margin-bottom:8px;">
                    <input type="checkbox" name="subjects" value="<%= subject._id %>" id="sub<%= idx %>" onchange="document.getElementById('teacherFor_<%= subject._id %>').disabled = !this.checked;">
                    <label for="sub<%= idx %>"><%= subject.name %> (Sem <%= subject.semester %>)</label>
                    <select name="teacherFor_<%= subject._id %>" id="teacherFor_<%= subject._id %>" disabled>
                        <option value="">--Select Teacher--</option>
                        <% faculty.forEach(function(teacher) { %>
                            <% if (teacher.subjects.map(String).includes(String(subject._id))) { %>
                                <option value="<%= teacher._id %>"><%= teacher.name %> (<%= teacher.department %>)</option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
            <% }); %>
        </div>
        <button type="submit">Add Batch</button>
        <script>
        function filterSubjectsBySemester() {
            var sem = document.getElementById('batchSemester').value;
            document.querySelectorAll('.subject-row').forEach(function(row) {
                if (!sem || row.getAttribute('data-semester') === sem) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                    row.querySelector('input[type=checkbox]').checked = false;
                    row.querySelector('select').disabled = true;
                }
            });
        }
        </script>
    </form>
    <br>
    <table border="1" cellpadding="8" style="margin:auto;">
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Semester</th>
            <th>Students Count</th>
            <th>Shift</th>
            <th>Subjects</th>
        </tr>
        <% batches.forEach(function(batch) { %>
        <tr>
            <td><%= batch.name %></td>
            <td><%= batch.department %></td>
            <td><%= batch.semester %></td>
            <td><%= batch.studentsCount %></td>
            <td><%= batch.shift %></td>
            <td>
                <% if (batch.subjects && batch.subjects.length) { %>
                    <%= batch.subjects.map(function(s) { return s.name || s; }).join(', ') %>
                <% } else { %>
                    None
                <% } %>
            </td>
            <td>
                <form method="POST" action="/batches/delete" style="display:inline;">
                    <input type="hidden" name="id" value="<%= batch._id %>">
                    <button type="submit" onclick="return confirm('Delete this batch?')">Delete</button>
                </form>
            </td>
        </tr>
        <% }); %>
    </table>
    <br>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
